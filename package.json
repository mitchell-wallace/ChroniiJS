{
  "name": "chroniijs",
  "private": true,
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:web": "vite --config vite.config.web.ts",
    "preview": "vite preview",
    "preview:web": "vite preview --config vite.config.web.ts --outDir dist-web",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-builder install-app-deps",
    "check": "tsc --noEmit",
    "build": "npm run rebuild && tsc && vite build && electron-builder",
    "build:web": "tsc && vite build --config vite.config.web.ts",
    "build:win": "npm run rebuild && tsc && vite build && electron-builder --win",
    "build:mac": "npm run rebuild && tsc && vite build && electron-builder --mac",
    "build:linux": "npm run rebuild && tsc && vite build && electron-builder --linux",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/sql.js": "^1.4.9",
    "@vitest/ui": "^3.2.4",
    "daisyui": "^5.0.43",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "prebuild-install": "^7.1.2",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-solid": "^2.11.6",
    "vitest": "^3.2.4"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.chronii.chroniijs",
    "productName": "Chronii",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "icon": "public/chronii-js-logo.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "public/chronii-js-logo.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "public/chronii-js-logo-256.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.10",
    "better-sqlite3": "^11.10.0",
    "solid-js": "^1.9.7",
    "sql.js": "^1.13.0"
  }
}
